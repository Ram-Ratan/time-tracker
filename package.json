{
    "name": "surface-service",
    "version": "0.0.0",
    "description": "Surface Service module for talent monk",
    "private": true,
    "scripts": {
        "audit": "npm audit --production --audit-level=critical",
        "dev:server": "node ./esbuild/server.dev-config.js",
        "dev:watch": "nodemon ./build/index.js",
        "dev": "concurrently \"npm run dev:server\" \"npm run dev:watch\"",
        "start": "node ./build/index.js",
        "start:dev": "npm run build && node ./build/index.js",
        "build": "node ./esbuild/server.build-config.js",
        "lint": "eslint --max-warnings=0 --fix --ext=ts,json ./ && npm run lint:format",
        "lint:fix": "eslint --max-warnings=0 --fix --ext=ts,json ./",
        "lint:format": "prettier --write '**/*.{ts,js,json,md,yml}'",
        "prisma:generate": "prisma generate",
        "postinstall": "npm run prisma:link",
        "prisma:link": "ln -sfn node_modules/@talent-monk/client-schema/schema.prisma schema.prisma && rm -rf ./node_modules/.prisma && cp -r ./node_modules/@talent-monk/client-schema/.prisma ./node_modules/.prisma",
        "prettier-format": "prettier --config .prettierrc src/**/*.ts --write",
        "clean": "rm -rf node_modules && rm package-lock.json",
        "clean:i": "npm run clean && npm i",
        "local:i": "bash local-install.bash"
    },
    "dependencies": {
        "@google-cloud/local-auth": "^2.1.0",
        "@prisma/client": "^5.17.0",
        "@talent-monk/client-schema": "2.0.246",
        "@talent-monk/client-shared": "1.1.23",
        "@talent-monk/rbac": "0.0.4",
        "@talent-monk/shared-workflow": "0.0.15",
        "@talent-monk/utils": "1.0.3",
        "axios": "^1.9.0",
        "csv-parser": "^3.0.0",
        "date-fns": "^4.1.0",
        "date-holidays": "^3.24.2",
        "dotenv": "16.0.3",
        "express": "^4.18.2",
        "fast-csv": "^4.3.6",
        "form-data": "^4.0.0",
        "googleapis": "^105.0.0",
        "http-status-codes": "2.2.0",
        "ics": "^3.2.0",
        "indian-holidays": "^2.0.1",
        "jsonwebtoken": "9.0.0",
        "jwks-rsa": "^3.0.1",
        "moment": "^2.29.4",
        "moment-timezone": "^0.5.43",
        "multer": "^1.4.5-lts.1",
        "node-cron": "^3.0.3",
        "node-gyp": "9.3.1",
        "reflect-metadata": "0.1.13",
        "ts-node": "^10.9.1",
        "uuid": "^9.0.0",
        "validator": "^13.11.0",
        "zod": "3.19.1"
    },
    "devDependencies": {
        "@types/express": "4.17.15",
        "@types/express-serve-static-core": "^4.17.34",
        "@types/express-useragent": "1.0.2",
        "@types/multer": "^1.4.7",
        "@types/node": "18.14.0",
        "@types/node-cron": "^3.0.11",
        "@types/uuid": "^9.0.7",
        "@types/validator": "^13.11.7",
        "@typescript-eslint/eslint-plugin": "5.52.0",
        "@typescript-eslint/parser": "5.52.0",
        "concurrently": "7.6.0",
        "esbuild": "0.15.8",
        "eslint": "8.34.0",
        "eslint-config-prettier": "8.6.0",
        "eslint-plugin-prettier": "4.2.1",
        "husky": "^8.0.3",
        "nodemon": "2.0.20",
        "prettier": "2.8.4",
        "prisma": "^5.17.0",
        "rimraf": "4.1.2",
        "snyk": "1.1097.0",
        "ts-node": "10.9.1",
        "typescript": "4.9.4"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run prettier-format && npm run lint:format",
            "pre-push": "npm run build"
        },
        "lint-staged": {
            "*.{js,jsx,ts,tsx}": "npm run lint:fix"
        }
    },
    "resolutions": {
        "@types/express-serve-static-core": "^4.17.34",
        "@types/express": "4.17.17"
    }
}
